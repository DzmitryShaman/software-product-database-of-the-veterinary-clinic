<Window x:Class="MyPro.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPro"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowDrop="True" 
        
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="549*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="#4EB1B6" Grid.ColumnSpan="2" />

        <Grid Grid.ColumnSpan="2" Margin="0,72,0,72" Grid.RowSpan="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Label Content="Регистрация профиля" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Tempus Sans ITC" FontSize="20" FontWeight="Bold" FontStyle="Italic"/>

            <Label Grid.Row="1" Content="Логин:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" FontStyle="Italic"/>
            <Label Grid.Row="2" Content="Пароль:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" FontStyle="Italic"/>

            <TextBox Grid.Row="1" Grid.Column="1" Margin="0 0 50 0" VerticalAlignment="Center" FontSize="14" TextWrapping="Wrap" />
            <PasswordBox Grid.Row="2" Grid.Column="1" Margin="0 0 50 0" VerticalAlignment="Center" FontSize="14" />

            <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Создать профиль" Margin="20 10" Background="#FFE8A8E8"/>
            <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Авторизация" Margin="20 10" Background="#FFF3ECB1"/>
        </Grid>

        <Grid Background="#4EB1B6" Grid.Row="2" Grid.ColumnSpan="2">
            <StackPanel Margin="0,0,65,0">
                <TextBlock x:Name="text1" Text="Поддержка :" FontFamily="Century Gothic" FontSize="10">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="White"/>
                    </TextBlock.Foreground>
                </TextBlock>
                <TextBlock x:Name="text2" Text="Возникли проблемы или по любым вопросам" FontFamily="Century Gothic" FontSize="10">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="White"/>
                    </TextBlock.Foreground>
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="text3" Text="электронный адрес : " FontFamily="Century Gothic" FontSize="10">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="White"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="10" FontFamily="Microsoft Sans Serif" Foreground="#FFB36DD7"><Hyperlink NavigateUri="https://e.mail.ru/compose/?mailto=prood.04@mail.ru" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="prood.04@mail.ru"/></Hyperlink></TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
